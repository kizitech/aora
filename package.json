{
  "name": "nft-marketplace",
  "version": "1.0.0",
  "description": "Full-stack NFT marketplace replicating Eth-Central.com",
  "private": true,
  "workspaces": [
    "frontend",
    "backend",
    "contracts"
  ],
  "scripts": {
    "install:all": "npm install && npm run install:frontend && npm run install:backend && npm run install:contracts",
    "install:frontend": "cd frontend && npm install",
    "install:backend": "cd backend && npm install",
    "install:contracts": "cd contracts && npm install",
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:frontend": "cd frontend && npm start",
    "dev:backend": "cd backend && npm run dev",
    "dev:contracts": "cd contracts && npm run node",
    "build": "npm run build:frontend && npm run build:backend",
    "build:frontend": "cd frontend && npm run build",
    "build:backend": "cd backend && npm run build",
    "test": "npm run test:frontend && npm run test:backend && npm run test:contracts",
    "test:frontend": "cd frontend && npm test -- --watchAll=false",
    "test:backend": "cd backend && npm test",
    "test:contracts": "cd contracts && npm test",
    "lint": "npm run lint:frontend && npm run lint:backend",
    "lint:frontend": "cd frontend && npm run lint",
    "lint:backend": "cd backend && npm run lint",
    "format": "npm run format:frontend && npm run format:backend",
    "format:frontend": "cd frontend && npm run format",
    "format:backend": "cd backend && npm run format",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:build": "docker-compose build",
    "docker:logs": "docker-compose logs -f",
    "db:setup": "cd backend && npx prisma migrate dev && npx prisma generate && npx prisma db seed",
    "deploy:contracts": "cd contracts && npm run deploy:sepolia",
    "clean": "npm run clean:frontend && npm run clean:backend && npm run clean:contracts",
    "clean:frontend": "cd frontend && rm -rf node_modules build",
    "clean:backend": "cd backend && rm -rf node_modules dist",
    "clean:contracts": "cd contracts && rm -rf node_modules artifacts cache"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "keywords": [
    "nft",
    "marketplace",
    "ethereum",
    "blockchain",
    "react",
    "nodejs",
    "postgresql",
    "redis",
    "ipfs"
  ],
  "author": "NFT Marketplace Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/nft-marketplace.git"
  }
}
